{
	"root": true,
	"extends": [
		"plugin:vue/recommended",
		"eslint:recommended",
	],
	"env": {
		"browser": true,
		"node": true,
	},
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaVersion": 2017,
	},
	"globals": {
		"p": true,
		"warn": true,
	},
	"rules": {
		"comma-dangle": [ "error", "always-multiline" ],
		"curly": "error",
		"no-console": 0,
		"no-multiple-empty-lines": [ "error", {
			"max": 1,
		}],
		"no-unused-vars": [ "warn", {
			"varsIgnorePattern": "^_",
			"argsIgnorePattern": "^_",
		}],
		"no-var": "error",
		"vue/attribute-hyphenation": "never",
		"vue/attributes-order": "never",
		"vue/html-indent": 0,
		"vue/max-attributes-per-line": [ "error", {
			"singleline": 999,
			"multiline": 0,
		}],
		"vue/require-default-prop": 0,
	},
}
