{
	"name": "moba",
	"version": "0.1.0",
	"license": "ISC",
	"repository": "https://github.com/project-trio/moba",
	"description": "A top-down 3D MOBA that plays in your browser.",
	"scripts": {
		"i": "pnpm install",
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build --modern",
		"lint": "vue-cli-service lint"
	},
	"engines": {
		"node": "^12",
		"npm": "^6"
	},
	"dependencies": {
		"express": "^4.17.1",
		"pg": "^7.17.0",
		"socket.io": "^2.3.0"
	},
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@fullhuman/postcss-purgecss": "^1.3.0",
		"@ky-is/eslint-config": "^1.8.2",
		"@ky-is/tailwindcss-plugin-width-height": "^1.0.0",
		"@ky-is/trio-client": "^1.0.0",
		"@vue/babel-preset-app": "^4.1.2",
		"@vue/cli-plugin-babel": "^4.1.2",
		"@vue/cli-plugin-eslint": "^4.1.2",
		"@vue/cli-service": "^4.1.2",
		"babel-eslint": "^10.0.3",
		"core-js": "^3.6.1",
		"css-loader": "^3.4.1",
		"eslint": "^6.8.0",
		"eslint-loader": "^3.0.3",
		"eslint-plugin-vue": "^6.1.2",
		"postcss-preset-env": "^6.7.0",
		"socket.io-client": "^2.3.0",
		"stats.js": "^0.17.0",
		"tailwindcss": "^1.1.4",
		"three": "^0.101.1",
		"typescript": "^3.7.4",
		"url-loader": "^3.0.0",
		"vue": "^2.6.11",
		"vue-loader": "^15.8.3",
		"vue-router": "^3.1.3",
		"vue-template-compiler": "^2.6.11",
		"webpack": "^4.41.5"
	},
	"babel": {
		"presets": [
			[
				"@vue/app",
				{
					"jsx": false,
					"loose": true
				}
			]
		]
	},
	"browserslist": {
		"production": [
			"> 1%",
			"last 2 versions",
			"not ie <= 8"
		],
		"development": [
			"last 1 version",
			"not dead"
		]
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/vue",
		"globals": {
			"p": "readonly",
			"warn": "readonly"
		},
		"parserOptions": {
			"parser": "babel-eslint"
		},
		"rules": {
			"vue/require-default-prop": "off"
		}
	}
}
